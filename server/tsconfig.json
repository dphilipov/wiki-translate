{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "..",
    "types": ["node"]
  },
  "include": ["**/*.ts", "../src/**/*.ts"],
  "exclude": ["node_modules", "dist", "../client", "../node_modules"]
}
